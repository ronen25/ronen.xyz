---
import NavbarLink from './NavbarLink.astro';

const LINKS = [
  {
    title: 'Blog',
    link: '/blog',
    classes: 'dark:text-zurich-green-invert text-zurich-green-400 hover:text-green-900',
  },
  {
    title: 'Github',
    link: 'https://github.com/ronen25',
    classes: 'dark:text-zurich-amber text-zurich-amber-300 hover:text-zurich-amber-900',
    isSmall: false,
  },
  {
    title: 'Linkedin',
    link: 'https://www.linkedin.com/in/ronen-lapushner/',
    classes:
      'dark:text-zurich-blue-invert text-zurich-blue-400 hover:text-zurich-blue-900',
    isSmall: false,
  },
  {
    title: 'Resume',
    link: '/assets/Ronen Lapushner CV.pdf',
    classes:
      'dark:text-zurich-pink text-zurich-pink-invert hover:text-zurich-dark-purple',
    isSmall: false,
  },
  {
    title: 'Saffron Software',
    link: 'https://saffron.software',
    classes: 'text-saffron hover:text-saffron-dark',
    isSmall: true,
  },
];
---

<ul class='flex flex-col space-y-1'>
  {
    LINKS.map(({ title, link, classes, isSmall }) => (
      <NavbarLink title={title} link={link} classes={classes} isSmall={isSmall} />
    ))
  }
</ul>

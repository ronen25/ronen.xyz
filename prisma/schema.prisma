generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model posts {
  id          Int          @id @default(autoincrement())
  name        String?      @unique
  author      String
  publishdate DateTime     @db.Date
  updatedate  DateTime?    @db.Date
  views       Int          @default(0)
  content     String
  title       String
  isvisible   Boolean      @default(false)
  images      images[]
  posts_tags  posts_tags[]
}

model posts_tags {
  id     Int   @id @default(autoincrement())
  postid Int   @default(autoincrement())
  tagid  Int   @default(autoincrement())
  posts  posts @relation(fields: [postid], references: [id], onDelete: Cascade, map: "posts_tags_fk")
  tags   tags  @relation(fields: [tagid], references: [id], onDelete: Cascade, map: "posts_tags_fk_1")
}

model tags {
  id         Int          @id @default(autoincrement())
  name       String       @unique(map: "tags_un")
  posts_tags posts_tags[]
}

model images {
  id     Int     @id @default(autoincrement())
  src    String
  alt    String?
  postid Int     @default(autoincrement())
  posts  posts   @relation(fields: [postid], references: [id], onDelete: Cascade, map: "images_fk")
}
